<Window x:Class="UI.Views.AddAssignmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        Title="Add New Assignment" 
        Height="600" Width="460"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundGradientBrush}"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Border Style="{StaticResource CardStyle}"
                VerticalAlignment="Center"
                Padding="28">
            <StackPanel>
                <TextBlock Text="📝" FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                <TextBlock Text="New Assignment" 
                           Style="{StaticResource HeadingStyle}"
                           FontSize="22"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,4"/>
                <TextBlock Text="Create a new assignment for your students"
                           Style="{StaticResource SubheadingStyle}"
                           FontSize="13"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,24"/>

                <TextBlock Text="Title" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="TitleBox" 
                         Style="{StaticResource BaseTextBoxStyle}"
                         Margin="0,0,0,16"/>

                <TextBlock Text="Description" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="DescBox" 
                         Height="80" 
                         Style="{StaticResource MultilineTextBoxStyle}"
                         Margin="0,0,0,16"/>

                <Grid Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Type" Style="{StaticResource LabelStyle}"/>
                        <ComboBox x:Name="TypeCombo" 
                                  SelectedIndex="0" 
                                  SelectionChanged="TypeCombo_SelectionChanged"
                                  Style="{StaticResource BaseComboBoxStyle}">
                            <ComboBoxItem Content="Homework" Foreground="{StaticResource TextPrimaryBrush}"/>
                            <ComboBoxItem Content="Exam" Foreground="{StaticResource TextPrimaryBrush}"/>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Due Date" Style="{StaticResource LabelStyle}"/>
                        <DatePicker x:Name="DueDatePicker" 
                                    SelectedDate="{x:Static system:DateTime.Now}"
                                    Style="{StaticResource BaseDatePickerStyle}"/>
                    </StackPanel>
                </Grid>

                <StackPanel x:Name="HomeworkPanel" Margin="0,0,0,16">
                    <TextBlock Text="Max Points" Style="{StaticResource LabelStyle}"/>
                    <TextBox x:Name="PointsBox" 
                             Text="100" 
                             Style="{StaticResource BaseTextBoxStyle}"/>
                </StackPanel>

                <StackPanel x:Name="ExamPanel" Visibility="Collapsed" Margin="0,0,0,16">
                    <TextBlock Text="Exam Date" Style="{StaticResource LabelStyle}"/>
                    <DatePicker x:Name="ExamDatePicker"
                                Style="{StaticResource BaseDatePickerStyle}"/>
                </StackPanel>

                <Button Content="Create Assignment" 
                        Click="Save_Click" 
                        Style="{StaticResource PrimaryButtonStyle}"
                        Margin="0,8,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
