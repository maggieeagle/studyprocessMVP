<Window x:Class="UI.Views.AddAssignmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New Assignment" Height="450" Width="400"
        WindowStartupLocation="CenterOwner">
    <StackPanel Margin="20">

        <TextBlock Text="Title" FontWeight="Bold"/>
        <TextBox x:Name="TitleBox" Margin="0,0,0,10"/>

        <TextBlock Text="Description" FontWeight="Bold"/>
        <TextBox x:Name="DescBox" Height="60" TextWrapping="Wrap" Margin="0,0,0,10"/>

        <TextBlock Text="Type" FontWeight="Bold"/>
        <ComboBox x:Name="TypeCombo" SelectedIndex="0" SelectionChanged="TypeCombo_SelectionChanged" Margin="0,0,0,10">
            <ComboBoxItem Content="Homework"/>
            <ComboBoxItem Content="Exam"/>
        </ComboBox>

        <TextBlock Text="Due Date" FontWeight="Bold"/>
        <DatePicker x:Name="DueDatePicker" SelectedDate="{x:Static system:DateTime.Now}" Margin="0,0,0,10"
                    xmlns:system="clr-namespace:System;assembly=mscorlib"/>

        <StackPanel x:Name="HomeworkPanel">
            <TextBlock Text="Max Points" FontWeight="Bold"/>
            <TextBox x:Name="PointsBox" Text="100" Margin="0,0,0,10"/>
        </StackPanel>

        <StackPanel x:Name="ExamPanel" Visibility="Collapsed">
            <TextBlock Text="Exam Date" FontWeight="Bold"/>
            <DatePicker x:Name="ExamDatePicker" Margin="0,0,0,10"/>
        </StackPanel>

        <Button Content="Create Assignment" Click="Save_Click" Height="30" Margin="0,10,0,0"/>
    </StackPanel>
</Window>