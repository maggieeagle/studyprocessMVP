<Window x:Class="UI.Views.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title=""
        Width="420"
        SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        ShowInTaskbar="False">

    <Border Background="{StaticResource SurfaceBrush}"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="12"
            Padding="0"
            Margin="16">
        <Border.Effect>
            <DropShadowEffect BlurRadius="32" ShadowDepth="0" Opacity="0.5" Color="Black"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" 
                    Background="{StaticResource SurfaceLightBrush}" 
                    CornerRadius="12,12,0,0"
                    Padding="20,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock x:Name="TitleText" 
                               Text="Message"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               VerticalAlignment="Center"/>
                    <Button Grid.Column="1"
                            Click="CloseButton_Click"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            Padding="8,4">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="CloseBorder" Background="Transparent" CornerRadius="4" Padding="{TemplateBinding Padding}">
                                    <TextBlock Text="âœ•" 
                                               FontSize="16" 
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="CloseBorder" Property="Background" Value="#3D4A5C"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>

            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="24,20">
                <Border x:Name="IconBorder" 
                        Width="48" Height="48" 
                        CornerRadius="24" 
                        Margin="0,0,16,0"
                        VerticalAlignment="Top">
                    <TextBlock x:Name="IconText" 
                               FontSize="24" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"/>
                </Border>
                <TextBlock x:Name="MessageText"
                           Text="Message content"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           FontSize="14"
                           TextWrapping="Wrap"
                           MaxWidth="280"
                           VerticalAlignment="Center"
                           LineHeight="22"/>
            </StackPanel>

            <Border Grid.Row="2" 
                    Background="{StaticResource SurfaceLightBrush}"
                    CornerRadius="0,0,12,12"
                    Padding="20,16">
                <StackPanel x:Name="ButtonPanel" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Right">
                    <Button x:Name="SecondaryButton"
                            Content="Cancel"
                            Click="SecondaryButton_Click"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Padding="20,10"
                            Margin="0,0,10,0"
                            MinWidth="90"
                            Visibility="Collapsed"/>
                    <Button x:Name="PrimaryButton"
                            Content="OK"
                            Click="PrimaryButton_Click"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Padding="20,10"
                            MinWidth="90"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>

