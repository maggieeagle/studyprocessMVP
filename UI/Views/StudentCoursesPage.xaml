<UserControl x:Class="UI.Views.StudentCoursesPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:helpers="clr-namespace:UI.Helpers"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        <helpers:BindingProxy x:Key="VmProxy" Data="{Binding}" />
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- filters -->
        <StackPanel Orientation="Horizontal"
            Margin="0,0,0,10"
            Visibility="{Binding Data.IsStudent,
                                 Source={StaticResource VmProxy},
                                 Converter={StaticResource BoolToVis}}">
            <TextBox Width="200"
                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                     ToolTip="Search by Name"
                     Margin="0,0,5,0"/>
            <TextBox Width="120"
                     Text="{Binding CourseCode, UpdateSourceTrigger=PropertyChanged}"
                     ToolTip="Course Code"
                     Margin="0,0,5,0"/>

            <ComboBox
                ItemsSource="{Binding CourseStatusValues}"
                SelectedItem="{Binding CourseStatus, Mode=TwoWay}"
                Width="150">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding FallbackValue=All}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>


            <DatePicker SelectedDate="{Binding StartDate}" Width="120" Margin="0,0,5,0"/>
            <DatePicker SelectedDate="{Binding EndDate}" Width="120" Margin="0,0,5,0"/>
            <Button Content="Search"
                    Command="{Binding LoadCoursesCommand}" Width="80"/>
        </StackPanel>

        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Courses}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False">

            <DataGrid.Columns>

                <DataGridTemplateColumn Header="Course Name" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock VerticalAlignment="Center">
                                <Hyperlink Command="{Binding DataContext.NavigateToCourseCommand,
                                                     RelativeSource={RelativeSource AncestorType=UserControl}}"
                                           CommandParameter="{Binding}">
                                    <TextBlock Text="{Binding CourseName}" />
                                </Hyperlink>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="Code"
                                    Binding="{Binding Code}"
                                    Width="Auto" />
                <DataGridTextColumn Header="Start Date"
                        Binding="{Binding StartDate, StringFormat=d}"
                        Width="Auto" />
                <DataGridTextColumn Header="End Date"
                        Binding="{Binding EndDate, StringFormat=d}"
                        Width="Auto" />
                <DataGridCheckBoxColumn Header="Enrolled"
                        Binding="{Binding IsEnrolled}"
                        IsReadOnly="True"
                        Width="Auto"
                        Visibility="{Binding Data.IsStudent,
                                     Source={StaticResource VmProxy},
                                     Converter={StaticResource BoolToVis}}" />

                <DataGridTemplateColumn Header="Action"
                        Width="Auto"
                        Visibility="{Binding Data.IsStudent,
                                     Source={StaticResource VmProxy},
                                     Converter={StaticResource BoolToVis}}">

                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Command="{Binding DataContext.EnrollCommand,
                                              RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Content" Value="Enroll" />
                                        <Setter Property="IsEnabled" Value="True" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsEnrolled}" Value="True">
                                                <Setter Property="Content" Value="Enrolled" />
                                                <Setter Property="IsEnabled" Value="False" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
