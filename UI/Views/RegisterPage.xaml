<UserControl x:Class="UI.Views.RegisterPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             Background="Transparent">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid MinHeight="550">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="250"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*" MinWidth="80"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Padding="40,40,20,40">
                <StackPanel VerticalAlignment="Center" MaxWidth="350">
                    <TextBlock Text="🎓" FontSize="48" Margin="0,0,0,20"/>
                    <TextBlock Text="Join StudyHub" 
                               Style="{StaticResource HeadingStyle}"
                               FontSize="28"
                               TextWrapping="Wrap"
                               Margin="0,0,0,12"/>
                    <TextBlock TextWrapping="Wrap"
                               Style="{StaticResource SubheadingStyle}"
                               FontSize="14"
                               LineHeight="24"
                               Margin="0,0,0,28">
                        <Run Text="Create your account and start your learning journey today. It only takes a minute!"/>
                    </TextBlock>

                    <Border Background="{StaticResource SurfaceBrush}" 
                            CornerRadius="10" 
                            Padding="16"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="✨ What you'll get:" 
                                       Foreground="{StaticResource TextPrimaryBrush}" 
                                       FontWeight="SemiBold"
                                       FontSize="13"
                                       Margin="0,0,0,12"/>
                            <TextBlock Text="• Personal dashboard" 
                                       Foreground="{StaticResource TextSecondaryBrush}" 
                                       FontSize="12"
                                       Margin="0,0,0,6"/>
                            <TextBlock Text="• Course enrollment" 
                                       Foreground="{StaticResource TextSecondaryBrush}" 
                                       FontSize="12"
                                       Margin="0,0,0,6"/>
                            <TextBlock Text="• Grade tracking" 
                                       Foreground="{StaticResource TextSecondaryBrush}" 
                                       FontSize="12"
                                       Margin="0,0,0,6"/>
                            <TextBlock Text="• Assignment management" 
                                       Foreground="{StaticResource TextSecondaryBrush}" 
                                       FontSize="12"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>

            <Border Grid.Column="1" 
                    Style="{StaticResource CardStyle}"
                    MinWidth="340"
                    MaxWidth="420"
                    VerticalAlignment="Center"
                    Padding="28"
                    Margin="20,30">
                <StackPanel>
                    <TextBlock Text="Create Account" 
                               Style="{StaticResource HeadingStyle}"
                               FontSize="24"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,6"/>
                    <TextBlock Text="Fill in your details to get started"
                               Style="{StaticResource SubheadingStyle}"
                               FontSize="13"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,24"/>

                    <TextBlock Text="I am a..." Style="{StaticResource LabelStyle}"/>
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <RadioButton x:Name="StudentRadio" 
                                     Grid.Column="0" 
                                     GroupName="Role"
                                     IsChecked="True"
                                     Checked="Role_Changed">
                            <RadioButton.Template>
                                <ControlTemplate TargetType="RadioButton">
                                    <Border x:Name="border" 
                                            Background="{StaticResource SurfaceBrush}"
                                            BorderBrush="{StaticResource BorderBrush}"
                                            BorderThickness="1"
                                            CornerRadius="6"
                                            Padding="12,10"
                                            Cursor="Hand">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <TextBlock Text="🎒" FontSize="14" Margin="0,0,6,0"/>
                                            <TextBlock Text="Student" 
                                                       Foreground="{StaticResource TextPrimaryBrush}"
                                                       FontSize="13"
                                                       FontWeight="Medium"/>
                                        </StackPanel>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsChecked" Value="True">
                                            <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource PrimaryBrush}"/>
                                            <Setter Property="Background" TargetName="border" Value="#1E3A5F"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource SurfaceLightBrush}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </RadioButton.Template>
                        </RadioButton>
                        <RadioButton x:Name="TeacherRadio" 
                                     Grid.Column="2" 
                                     GroupName="Role"
                                     Checked="Role_Changed">
                            <RadioButton.Template>
                                <ControlTemplate TargetType="RadioButton">
                                    <Border x:Name="border" 
                                            Background="{StaticResource SurfaceBrush}"
                                            BorderBrush="{StaticResource BorderBrush}"
                                            BorderThickness="1"
                                            CornerRadius="6"
                                            Padding="12,10"
                                            Cursor="Hand">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <TextBlock Text="👨‍🏫" FontSize="14" Margin="0,0,6,0"/>
                                            <TextBlock Text="Teacher" 
                                                       Foreground="{StaticResource TextPrimaryBrush}"
                                                       FontSize="13"
                                                       FontWeight="Medium"/>
                                        </StackPanel>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsChecked" Value="True">
                                            <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource PrimaryBrush}"/>
                                            <Setter Property="Background" TargetName="border" Value="#1E3A5F"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource SurfaceLightBrush}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </RadioButton.Template>
                        </RadioButton>
                    </Grid>

                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="First Name" Style="{StaticResource LabelStyle}"/>
                            <TextBox Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource BaseTextBoxStyle}"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Last Name" Style="{StaticResource LabelStyle}"/>
                            <TextBox Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource BaseTextBoxStyle}"/>
                        </StackPanel>
                    </Grid>

                    <TextBlock Text="Email" Style="{StaticResource LabelStyle}"/>
                    <TextBox Text="{Binding EmailInput, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource BaseTextBoxStyle}"
                             Margin="0,0,0,12"/>

                    <TextBlock Text="Password" Style="{StaticResource LabelStyle}"/>
                    <PasswordBox x:Name="PassBox"
                                 Style="{StaticResource BasePasswordBoxStyle}"
                                 PasswordChanged="PassBox_PasswordChanged"
                                 Margin="0,0,0,20"/>

                    <Button Content="Create Account"
                            Command="{Binding RegisterCommand}"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Margin="0,0,0,14"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="Already have an account? " 
                                   Foreground="{StaticResource TextMutedBrush}"
                                   FontSize="13"
                                   VerticalAlignment="Center"/>
                        <Button Content="Sign in"
                                Command="{Binding NavigateLoginCommand}"
                                Style="{StaticResource LinkButtonStyle}"
                                FontSize="13"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border Grid.Column="2"/>
        </Grid>
    </ScrollViewer>
</UserControl>
