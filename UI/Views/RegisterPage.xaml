<UserControl x:Class="UI.Views.RegisterPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="250">
        <TextBlock Text="Create Account" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <TextBlock Text="Role:"/>
        <ComboBox Margin="0,0,0,10" SelectedValue="{Binding Role}">
            <sys:String>Student</sys:String>
            <sys:String>Teacher</sys:String>
        </ComboBox>

        <TextBlock Text="First Name:"/>
        <TextBox Text="{Binding FirstName}" Margin="0,0,0,10"/>

        <TextBlock Text="Last Name:"/>
        <TextBox Text="{Binding LastName}" Margin="0,0,0,10"/>

        <TextBlock Text="Email:"/>
        <TextBox Text="{Binding EmailInput}" Margin="0,0,0,10"/>

        <TextBlock Text="Password:"/>
        <TextBox Text="{Binding Password}" Margin="0,0,0,15"/>

        <Button Content="Register" Command="{Binding RegisterCommand}" Height="30"/>
        <Button Content="Back to Login" Command="{Binding NavigateLoginCommand}" Margin="0,10,0,0" Background="Transparent" BorderBrush="Transparent"/>
    </StackPanel>
</UserControl>