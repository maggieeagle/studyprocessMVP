<Window x:Class="UI.Views.SubmitAssignmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI.Views"
        mc:Ignorable="d"
        Title="SubmitAssignmentWindow" Height="450" Width="800">
    <StackPanel>
        <TextBlock Text="Enter your answer below:" Margin="0,0,0,10" FontWeight="Bold"/>
        <TextBox x:Name="AnswerBox" Height="150" TextWrapping="Wrap" AcceptsReturn="True"/>
        <Button Content="Submit Answer" Click="Submit_Click" Margin="0,15,0,0" Padding="10,5"/>
    </StackPanel>
</Window>
