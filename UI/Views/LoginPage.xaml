<UserControl x:Class="UI.Views.LoginPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid MinHeight="500">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="280"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*" MinWidth="100"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Padding="40,40,20,40">
                <StackPanel VerticalAlignment="Center" MaxWidth="400">
                    <TextBlock Text="📚" FontSize="48" Margin="0,0,0,20"/>
                    <TextBlock Text="Welcome to StudyHub" 
                               Style="{StaticResource HeadingStyle}"
                               FontSize="28"
                               TextWrapping="Wrap"
                               Margin="0,0,0,12"/>
                    <TextBlock TextWrapping="Wrap"
                               Style="{StaticResource SubheadingStyle}"
                               FontSize="14"
                               LineHeight="24"
                               Margin="0,0,0,32">
                        <Run Text="Your gateway to organized learning. Track courses, manage assignments, and achieve your academic goals."/>
                    </TextBlock>

                    <StackPanel Margin="0,0,0,8">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <Ellipse Width="8" Height="8" Fill="{StaticResource SecondaryBrush}" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Track your progress" Foreground="{StaticResource TextSecondaryBrush}" FontSize="13"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <Ellipse Width="8" Height="8" Fill="{StaticResource SecondaryBrush}" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Manage assignments" Foreground="{StaticResource TextSecondaryBrush}" FontSize="13"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="8" Height="8" Fill="{StaticResource SecondaryBrush}" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Connect with teachers" Foreground="{StaticResource TextSecondaryBrush}" FontSize="13"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border Grid.Column="1" 
                    Style="{StaticResource CardStyle}"
                    MinWidth="340"
                    MaxWidth="400"
                    VerticalAlignment="Center"
                    Margin="20,40">
                <StackPanel>
                    <TextBlock Text="Sign In" 
                               Style="{StaticResource HeadingStyle}"
                               FontSize="24"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,6"/>
                    <TextBlock Text="Enter your credentials to continue"
                               Style="{StaticResource SubheadingStyle}"
                               FontSize="13"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,28"/>

                    <TextBlock Text="Email" Style="{StaticResource LabelStyle}"/>
                    <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource BaseTextBoxStyle}"
                             Margin="0,0,0,16"/>

                    <TextBlock Text="Password" Style="{StaticResource LabelStyle}"/>
                    <PasswordBox x:Name="PassBox"
                                 Style="{StaticResource BasePasswordBoxStyle}"
                                 Margin="0,0,0,24"/>

                    <Button Content="Sign In"
                            Command="{Binding LoginCommand}"
                            Click="Login_Click"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Margin="0,0,0,16"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="Don't have an account? " 
                                   Foreground="{StaticResource TextMutedBrush}"
                                   FontSize="13"
                                   VerticalAlignment="Center"/>
                        <Button Content="Create account"
                                Command="{Binding NavigateRegisterCommand}"
                                Style="{StaticResource LinkButtonStyle}"
                                FontSize="13"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border Grid.Column="2"/>
        </Grid>
    </ScrollViewer>
</UserControl>
